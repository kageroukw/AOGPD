@model CivilianCharacter

@{
    ViewData["Title"] = "Person Lookup";
}

<div class="text-center">
    <h1 class="display-4">Person Lookup</h1>
    <hr />
    <form asp-action="lookup" enctype="multipart/form-data" method="get" class="mt-2">
        <fieldset><legend>Civilian Lookup</legend></fieldset>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">First Name</label>
            <div class="col-sm-10">
                <input asp-for="FirstName" class="form-control" id="nameF" placeholder="Ex: John" required />
                <span class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Last Name</label>
            <div class="col-sm-10">
                <input asp-for="LastName" class="form-control" id="nameL" placeholder="Ex: Doe" required />
                <span class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2">
                <a asp-action="Create"><input class="btn btn-success" id="registerCiv" type="submit" value="Search" /></a>
            </div>
        </div>
    </form>
    <a asp-controller="police" asp-action="plate"><input id="PltButton" type="button" value="Search Plate" class="btn btn-warning" /></a>

    <div style="padding-bottom: 15px;"></div>
    <center>
        <table class="table">
            <thead>
                <tr>
                    <th style="color: white; background-color: #131E28;">
                        <b>First Name</b>
                    </th>
                    <th style="color: white; background-color: #131E28;">
                        <b>Last Name</b>
                    </th>
                    <th style="color: white; background-color: #131E28;">
                        <b>Date of Birth</b>
                    </th>
                    <th style="color: white; background-color: #131E28;">
                        <b>Citations</b>
                    </th>
                    <th style="color: white; background-color: #131E28;">
                        <b>Wanted</b>
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td style="color: white;">
                        @ViewBag.fName
                    </td>
                    <td style="color: white;">
                        @ViewBag.lName
                    </td>
                    <td style="color: white;">
                        @ViewBag.dob
                    </td>
                    <td style="color: white;">
                        @ViewBag.citations
                    </td>
                    <td style="color: white;">
                        @{ 
                            string wantedTxt;
                            if (ViewBag.wanted == true) { wantedTxt = "Yes"; }
                            else if (ViewBag.wanted == false) { wantedTxt = "No"; }
                            else { wantedTxt = ""; }
                        }
                        @wantedTxt
                    </td>
                </tr>
            </tbody>
        </table>
    </center>
</div>
@model AOGPD.Models.Bolo

@{
    ViewData["Title"] = "Delete Bolo - AOGPD";
}

<div class="text-center">
    <h1 class="display-4">Are you sure you want to remove this bolo?</h1>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LicensePlate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LicensePlate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VehicleName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VehicleName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VehicleColor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VehicleColor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WantedFor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WantedFor)
        </dd>
    </dl>
    <form asp-action="delete">
        <input type="hidden" asp-for="Id" />
        <input class="btn btn-danger" type="submit" value="🗑️ Remove" />
    </form>
</div>